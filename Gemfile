ruby '2.6.3'
source 'https://rubygems.org'

# Our app web framework
gem 'sinatra', '~> 2.0.5'

# Some useful extensions to Sinatra that are (somewhat) officially supported
gem 'sinatra-contrib', '~> 2.0.5'

# An easy way to make HTTP requests
gem 'httparty', '~> 0.21.0'

group :development do
    # Allows for reloading of our Sinatra server
    # See: http://sinatrarb.com/faq.html#reloading
    gem 'rerun', '~> 0.13.0'

    # A ~ fancy ~ IRB.
    gem 'pry', '~> 0.12.2'
    gem 'pry-coolline', '~> 0.2.5'

    # Progress bar for ~ fancy ~ payload generation.
    gem 'ruby-progressbar', '~> 1.10.1'
end
